#!/usr/bin/env bash

echo "-----> Installing GhostScript 9.15"
cd $1

if ! [ -f $CACHE_DIR/ghostscript-9.15.tar.gz ]; then
  echo "       Downloading built binary"
  curl https://api.anvilworks.org/slugs/f8b75233-3a3c-4f55-a269-dc813240ebbc.tgz \
    -o $CACHE_DIR/ghostscript-9.15.tar.gz \
    -s -ssl3
fi

mkdir -p vendor/ghostscript
tar -C vendor/ghostscript --strip=2 -xf $CACHE_DIR/ghostscript.tar.gz
